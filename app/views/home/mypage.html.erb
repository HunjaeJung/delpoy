                    <p> <b> E-mail </b> <%= @user.email %> </p>
                    <p> <b> Username </b> <%= @user.username %>  </p>
                    <p> <b> Phone </b> <%= @user.phone %> </p>
                    <% if @user.gender == 0 %>
                    <p> <b> Gender </b> Male </p>
                    <% else %>
                    <p> <b> Gender </b> Female</p>
                    <% end %>
                    <% if @user.language == 0 %>
                    <p> <b> Language </b> Korean </p>
                    <% end %>
                </div>
                <!-- Nav tabs -->
                <ul class="nav nav_edit nav-tabs" role="tablist">
